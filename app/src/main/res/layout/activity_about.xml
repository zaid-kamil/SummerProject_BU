<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trainedge.bu_pro.ProfileCreationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile Manager is an application which automatically updates your sound profile according to your location as specified by you."
            android:textSize="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/rate1"
            android:drawablePadding="8dp"
            style="?android:attr/borderlessButtonStyle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/btn_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/feedback2"
            android:drawablePadding="8dp"
            style="?android:attr/borderlessButtonStyle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invite Friends"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/share2"
            android:drawablePadding="8dp"
            style="?android:attr/borderlessButtonStyle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"/>



    </LinearLayout>
</ScrollView>
